<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="21">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="35dp"
            android:src="@drawable/team_title"
            android:layout_marginHorizontal="24dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="13"
            android:weightSum="9">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/pacman_button_long"
                android:id="@+id/team_pacman"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ghost_button"
                android:id="@+id/team_ghost"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="4"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="12dp"
            android:src="@drawable/go_button_long"
            android:id="@+id/team_go"
            android:layout_marginHorizontal="40dp"
            android:layout_weight="3"/>
    </LinearLayout>
</FrameLayout>
