<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="8">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/character_title"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:weightSum="10"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/pacman_button"
                android:id="@+id/player_pacman"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/blinky_button"
                android:id="@+id/player_blinky"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="10"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/pinky_button"
                android:id="@+id/player_pinky"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/inky_button"
                android:id="@+id/player_inky"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="10"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/clyde_button"
                android:id="@+id/player_clyde"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/go_button"
                android:id="@+id/player_go"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="4"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
